<?xml version="1.0" encoding="utf-8"?>
<!-- UPDATED: Wrapped with DrawerLayout -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".StudentDashboardActivity"
    tools:openDrawer="start">

    <!-- This is your existing dashboard content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dashboard_background_dark">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_purple"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_menu"
                app:titleTextColor="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FocusGuard"
                        android:textColor="@color/dashboard_title_light"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/toolbarSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Dashboard"
                        android:textColor="@color/dashboard_text_light"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- ScrollView to make content scrollable -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- ConstraintLayout inside ScrollView to hold all content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp">

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Hi, Loading... ðŸ‘‹"
                    android:textColor="@color/dashboard_title_light"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textReadyToFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Ready to focus?"
                    android:textColor="@color/dashboard_text_light"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textWelcome" />

                <!-- Timer Card -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/timerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/card_background_dark"
                    android:padding="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textReadyToFocus">

                    <TextView
                        android:id="@+id/labelClickToEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click the timer to edit the time"
                        android:textColor="@color/dashboard_text_light"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Circular Timer -->
                    <ProgressBar
                        android:id="@+id/progressTimer"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/labelClickToEdit" />

                    <!-- Icon centered inside circle -->
                    <ImageView
                        android:id="@+id/iconTimer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_timer"
                        app:tint="@color/white"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintVertical_bias="0.4"
                        app:layout_constraintBottom_toTopOf="@+id/textTimer"
                        app:layout_constraintEnd_toEndOf="@id/progressTimer"
                        app:layout_constraintStart_toStartOf="@id/progressTimer"
                        app:layout_constraintTop_toTopOf="@id/progressTimer" />

                    <!-- Text centered inside circle -->
                    <TextView
                        android:id="@+id/textTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25:00"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/labelFocusTime"
                        app:layout_constraintEnd_toEndOf="@id/progressTimer"
                        app:layout_constraintStart_toStartOf="@id/progressTimer"
                        app:layout_constraintTop_toBottomOf="@+id/iconTimer" />

                    <!-- Subtext centered inside circle -->
                    <TextView
                        android:id="@+id/labelFocusTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Focus Time"
                        android:textColor="@color/dashboard_text_light"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@id/progressTimer"
                        app:layout_constraintEnd_toEndOf="@id/progressTimer"
                        app:layout_constraintStart_toStartOf="@id/progressTimer"
                        app:layout_constraintTop_toBottomOf="@+id/textTimer" />

                    <!-- Start Button -->
                    <Button
                        android:id="@+id/buttonStart"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/button_start_gradient"
                        android:text="Start"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/progressTimer" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Stats Cards -->
                <LinearLayout
                    android:id="@+id/statsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/timerCard"
                    app:layout_constraintStart_toStartOf="@id/timerCard"
                    app:layout_constraintTop_toBottomOf="@id/timerCard">

                    <!-- Pomodoros Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_background_dark"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_pomodoro"
                            app:tint="@color/stat_icon_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textPomodoroCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pomodoros"
                                android:textColor="@color/dashboard_text_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Hours Today Card -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/card_background_dark"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_hours"
                            app:tint="@color/stat_icon_blue" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textHoursToday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0h"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today"
                                android:textColor="@color/dashboard_text_light"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Progress Report Button -->
                <Button
                    android:id="@+id/buttonProgressReport"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_progress_gradient"
                    android:text="Progress Report"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/statsLayout"
                    app:layout_constraintStart_toStartOf="@id/statsLayout"
                    app:layout_constraintTop_toBottomOf="@id/statsLayout" />

                <!-- Quote Card -->
                <LinearLayout
                    android:id="@+id/quoteCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/card_background_dark"
                    android:orientation="vertical"
                    android:padding="20dp"
                    app:layout_constraintEnd_toEndOf="@id/buttonProgressReport"
                    app:layout_constraintStart_toStartOf="@id/buttonProgressReport"
                    app:layout_constraintTop_toBottomOf="@id/buttonProgressReport">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€œDo it now, sometimes later becomes neverâ€"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="â€“ Lemor"
                        android:textColor="@color/dashboard_text_light"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- NEW: Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>