<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission
        android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Hardware Features -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!--
    *** CRITICAL: PACKAGE VISIBILITY (Android 11+/API 30+) ***
    This block allows the app to query the list of user-installed apps
    for the Parental Controls "Add More Apps" feature.
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guard">

        <!-- All your Activities -->

        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NoInternetActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".VerifyEmailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".ParentDashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".StudentDashboardActivity"
            android:exported="false"
            android:lockTaskMode="if_whitelisted"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".ProgressReportActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".FocusModeActivity"
            android:exported="false"
            android:lockTaskMode="always"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".LinkAccountActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".ParentalControlsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".PinCheckActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dialog" />
        <activity android:name=".AppBlockActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dialog"
            android:launchMode="singleTask" />
        <activity android:name=".ProfileSettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />
        <activity android:name=".NotificationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />

        <!-- NEW: Added the CreateParentPinActivity -->
        <activity android:name=".CreateParentPinActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Guard.Dark" />


        <!-- Device Admin Receiver -->
        <receiver
            android:name=".DeviceAdminReceiver"
            android:exported="true"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLE_REQUESTED" />
                <action android:name="android.app.action.DEVICE_ADMIN_DISABLED" />
            </intent-filter>
        </receiver>

        <!-- Accessibility Service (The Watchdog) -->
        <service
            android:name=".AppLockService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/service_config" />
        </service>

        <!-- Firebase Messaging Service (For Notifications) -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- REMOVED: All Facebook <meta-data> and <activity> tags -->

    </application>
</manifest>